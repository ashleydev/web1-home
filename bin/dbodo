#!/usr/bin/perl

use Cwd qw(realpath);

use strict;

foreach (@ARGV) {

  chomp;
  
  if ( -f $_) {
    my $file = realpath($_);

    if ($file =~ m{^.*code/}) {

      my $php_file = $file;
      $php_file =~ s{^.*code/}{};

      if (length($php_file)) { print "include_once('$php_file');\n"; }
    }
  }
}
