#!/usr/bin/perl

use v5.10.0;
use strict;

use constant SPACING_HEX => 2;

while (<>) {
  chomp;
  s/[^0-9a-f]//ig; # strip non hex
  my $line = $_;

  my $pos = 0;
  my $line_translated;

  for (;;) {
    my $hex = substr $line, $pos, SPACING_HEX;
    my $char = pack('H2', $hex);

    $line_translated .= $char;

    $pos += 2;
    last if ($pos >= length($line));
  }

  say $line_translated;

}
