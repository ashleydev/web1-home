#!/bin/sh

# Use this to create a working Perl file with some comments to save time.

if [ -n "$1" ]
then

	if [ ! -e $1 ]
	then
		cp ~/doc/template.pl ./$1
		vi $1
	else
		#echo $1 already exists !  Editing...
		vi $1
	fi
		

else
	echo Purpose: To make a general template for a Perl file + executable
	echo
	echo Usage: $0 [new_file.pl]
fi
