#!/usr/bin/perl

use Time::localtime;

use constant SHIFT_START => 12; # noon hour
use constant SHIFT_END => 20; # 7pm hour

my $hour = localtime->hour();

#print "Hour $hour\n";

if (SHIFT_START <= $hour && $hour <= SHIFT_END) {
#  print "Currently in working shift.\n";
  exit(0);
} else {
#  print "Not in working shift.\n";
  exit(1);
}
