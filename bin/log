#!/bin/sh

# Syntax:  log (--help) {-n)

# To handle logfile editing

case "$1" in
	-n)
		echo >> ~/.log ; date +'%Y-%b-%d (%A)' >> ~/.log ; echo ======================= >> ~/.log
		vi -c "map \\t GoTODO:  " -c "map \\d GoDONE:  " ~/.log
	;;
	--help)
		echo Usage: $0 '(-n)'
	;;
	*)
		vi -c "map \\t GoTODO:  " -c "map \\d GoDONE:  " ~/.log
	;;
esac
