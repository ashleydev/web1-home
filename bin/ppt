#!/bin/sh

if [ -f "$1" ] ; then

  cat $1 | trim | pretty > /tmp/pretty_print.tmp
  cat /tmp/pretty_print.tmp > $1
  rm /tmp/pretty_print.tmp

else
	echo Purpose: Pretty printer interface.  Use only on Perl code.  [33m*WARNING, this will overwrite the file.  ãŠæ°—ãŠã¤ã‘ã¦*[00m
	echo
	echo Usage: $0 [file]
fi
