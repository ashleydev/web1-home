#!/bin/sh

if [ "$2" ] ; then

  if [ "$1" = "/home/http" ] && [ "$DEVMODE" = 1 ] ; then
    cd ~/http
  else
    cd $1
  fi

  # the f switch = full path on sfvi
  # the j switch = ignore likely packed javascript files (see _fvi $flag_packed_www_js_ignore for more details)
  sfvi "$2" $3 $4 f
else
  echo Purpose: Frontend for sfvi to do a search without having to change dirs back and forth in either repository, specified by '$1'
  echo
  echo Usage: $0 '"query"'
fi
