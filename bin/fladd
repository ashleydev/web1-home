#!/usr/bin/perl

use Cwd qw(realpath);

use strict;

my $filename_filelist = "./filelist";
my @files;

foreach (@ARGV) {
  
  if (-f) {
    my $fullpath = realpath($_);
    push (@files, $fullpath);
  }
}

# START ---------------------- 

if (@files) {
  
  if ( -f $filename_filelist ) {
    foreach (@files) {
      system("echo $_ >> $filename_filelist");
    }
  } else {
    print "Can't locate $filename_filelist!\n";
  }

##END##
} else {
  print "Purpose: Add files to the $filename_filelist file\n\n";
  print "Usage: $0 [file]\n";
}
