#!/bin/sh

if [ -f "$1" ] ; then

  cat $1 | tr -c -d '[:print:]\n' > /tmp/tmpfs/.strip_bincmd.tmp
  cat /tmp/tmpfs/.strip_bincmd.tmp > $1
  rm /tmp/tmpfs/.strip_bincmd.tmp

else
	echo Purpose:  Strips a file of all non-printable characters.  [33m*WARNING, this will overwrite the file.  お気おつけて*[00m
	echo
	echo Usage: $0 [file]
fi
