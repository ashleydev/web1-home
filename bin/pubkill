#!/bin/sh

# This will kill a stuck process in the Interm

if [ -n "$1" ] ; then
	#sudo -u pubstock ps u U pubstock | grep $1 | grep -v grep | awk '{print $2}' | xargs -L1 kill $2 
	#ps u U pubstock | grep $1 | grep -v grep | awk '{print $2}' | xargs -L1 sudo -u pubstock kill $2
	pgrep -u pubstock -f $1 | xargs -L1 sudo -u pubstock echo hi $2
else
	echo "Purpose: To kill a Pubstock process(es) in the working... usually used when items hang in the Interm queue."
	echo
	echo "Usage: $0 [filename] (kill priority...)"
fi
