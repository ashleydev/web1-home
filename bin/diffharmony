#!/bin/sh

if [ -f "$1" ] ; then
  PROCEED_A=1
else
  echo "Cannot find $1"
fi

if [ -f "$2" ] ; then
  PROCEED_B=1
else
  echo "Cannot find $2"
fi

if [ PROCEED_A ] && [ PROCEED_B ] ; then
    (diff "$1" "$2" ; echo ; echo ----------------- ; echo diff "$1" "$2") | diffcolour | less -i -R
fi

unset PROCEED_A
unset PROCEED_B
